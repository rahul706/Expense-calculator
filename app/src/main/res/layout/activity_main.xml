<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/image"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.thenewboston.expensecalculator.MainActivity">

    <TextView
        android:text=" Previous Expense"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#fb00ef"
        android:layout_marginTop="42dp"
        android:id="@+id/prevExpense"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Food"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/prevExpense"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#00fb14"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="56dp"
        android:id="@+id/txtFood"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:layout_alignTop="@+id/txtFood"
        android:layout_toRightOf="@+id/txtFood"
        android:layout_toEndOf="@+id/txtFood"
        android:layout_marginLeft="43dp"
        android:layout_marginStart="43dp"
        android:id="@+id/etFood" />

    <TextView
        android:text="Shopping"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etFood"
        android:textColor="#00fbfb"
        android:layout_alignLeft="@+id/txtFood"
        android:layout_alignStart="@+id/txtFood"
        android:layout_marginTop="21dp"
        android:id="@+id/txtShopping"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:layout_alignTop="@+id/txtShopping"
        android:layout_alignLeft="@+id/etFood"
        android:layout_alignStart="@+id/etFood"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp"
        android:id="@+id/etShopping" />

    <TextView
        android:text="Fuel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:textColor="#0600fb"
        android:id="@+id/txtFuel"
        android:layout_below="@+id/etShopping"
        android:layout_toLeftOf="@+id/etFood"
        android:layout_alignLeft="@+id/txtShopping"
        android:layout_alignStart="@+id/txtShopping"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:layout_alignTop="@+id/txtFuel"
        android:layout_alignRight="@+id/etFood"
        android:layout_alignEnd="@+id/etFood"
        android:id="@+id/etFuel" />

    <TextView
        android:text="Telephone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="38dp"
        android:textColor="#fb0044"
        android:id="@+id/txtTelephone"
        android:layout_below="@+id/etFuel"
        android:layout_alignLeft="@+id/txtFuel"
        android:layout_alignStart="@+id/txtFuel"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:layout_alignTop="@+id/txtTelephone"
        android:layout_alignLeft="@+id/etFuel"
        android:layout_alignStart="@+id/etFuel"
        android:id="@+id/etTelephone" />

    <Button
        android:text="Calculate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#e2ee19"
        android:id="@+id/btnCalculate"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp" />
</RelativeLayout>
